{
  "manifest_version": 3,
  "name": "Global side panel",
  "version": "1.0",
  "description": "Shows how to display the same side panel on every site using the Side Panel API.",
  "icons": {
    "16": "images/icon-16.png"
  },
  "side_panel": {
    "default_path": "dist/index.html"
  },
  "permissions": ["sidePanel", "contextMenus"],

  "externally_connectable": {
    "matches": ["https://localhost:3000/*"]
  },
  "background": {
    "service_worker": "service-worker.js"
  }
}
